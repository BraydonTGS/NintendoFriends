<UserControl
    x:Class="NintendoFriends.WPF.Components.FriendDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NintendoFriends.WPF.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Transparent"
    mc:Ignorable="d">
    <Border
        Margin="10"
        Padding="10"
        Background="#fff"
        BorderBrush="#00A1DC"
        BorderThickness="5"
        CornerRadius="20"
        SnapsToDevicePixels="True">
        <Grid>
            <!--  User Selected = False  -->
            <Grid>
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasSelectedFriend}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <TextBlock
                    Grid.Row="0"
                    Margin="20"
                    HorizontalAlignment="Center"
                    FontSize="50"
                    Text="Please Select a Username" />
            </Grid>

            <!--  Main Grid  -->
            <!--  User Selected = False  -->
            <Grid Grid.IsSharedSizeScope="True">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasSelectedFriend}" Value="True">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>

                <!--  3 Rows  -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--  Username  -->
                <TextBlock
                    Grid.Row="0"
                    FontSize="50"
                    Text="{Binding Username}" />

                <!--  Friend Details  -->
                <Grid Grid.Row="1" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="Label" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="Best Friend?" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="{Binding IsBestFriendDisplay}" />
                </Grid>

                <!--  Friend Details  -->
                <Grid Grid.Row="3" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="Label" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="Online?" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="{Binding IsOnlineDisplay}" />

                </Grid>
                <!--  Friend Details  -->
                <Grid Grid.Row="2" Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" SharedSizeGroup="Label" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="Favorite Game?" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="{Binding FavoriteGame}" />

                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
