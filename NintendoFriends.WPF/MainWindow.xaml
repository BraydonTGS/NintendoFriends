<Window
    x:Class="NintendoFriends.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NintendoFriends.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:NintendoFriends.WPF.MVVM.ViewModels"
    xmlns:views="clr-namespace:NintendoFriends.WPF.Views"
    xmlns:views1="clr-namespace:NintendoFriends.WPF.MVVM.Views"
    Width="1000"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    FontSize="14"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <views:NintendoFriendsView DataContext="{Binding NintendoFriends}"/>
</Window>