<Window
    x:Class="NintendoFriends.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:modal="clr-namespace:ModalControl;assembly=ModalControl"
    xmlns:views="clr-namespace:NintendoFriends.WPF.Views"
    xmlns:local="clr-namespace:NintendoFriends.WPF"
    Width="1000"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    FontSize="14"
    MouseDown="Window_MouseDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate DataType="{x:Type AddFriendViewModel}">
            
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <modal:Modal IsOpen="{Binding IsModalOpen}">
            <ContentControl Content="{Binding CurrentModalViewModel}" />
        </modal:Modal>
        <views:NintendoFriendsView DataContext="{Binding NintendoFriends}" />

    </Grid>
</Window>